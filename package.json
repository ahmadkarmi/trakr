{
  "name": "trakr",
  "version": "1.0.0",
  "description": "Modern Audit Management - React Web & React Native Mobile",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:web dev:mobile",
    "dev:web": "npm run dev --workspace=@trakr/web",
    "dev:mobile": "npm run dev --workspace=@trakr/mobile",
    "build:web": "npm run build --workspace=@trakr/web",
    "build:mobile": "npm run build --workspace=@trakr/mobile",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces && rimraf node_modules",
    "install:all": "npm install",
    "seed:db": "node scripts/seed-database.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/trakr.git"
  },
  "keywords": [
    "audit",
    "management",
    "react",
    "react-native",
    "typescript",
    "monorepo"
  ],
  "author": "Your Organization",
  "license": "MIT"
}
